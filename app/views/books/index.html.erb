<h1>Books</h1>

<div id="books">
    <% @books.each do |book| %>
        <div class="book">
            <div>
                <%= link_to book_path(book) do %>
                    <h2><%= book.title %></h2>
                    <p>by <%= book.author %></p>
                    <p>ISBN: <%= book.isbn %></p>
                <% end %>
            </div>
            <div class="borrow-info">
                <%= link_to (book.borrowings.exists? ? "Checked out" : "Borrow"), book_path(book) %>
            </div>
        </div>
    <% end %>
</div>
